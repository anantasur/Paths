<project name="paths" default="clean">
	<property name="src" value="."/>
	<property name="classes" value="classes"/>
	<property name="testRunner" value="PathTest"/>
	<target name="clean">
		<delete dir="build"/>
	</target>

	<target name="compile">
		<mkdir dir="classes"/>
    	<javac srcdir="${src}" destdir="${classes}" classpath="junit-4.10.jar" includeantruntime="yes"/>
	</target>

	<target name="runTest" depends="compile">
		<echo message="running pathTests..................."/>
		<java classpath="${classes};junit-4.10.jar" classname="org.junit.runner.JUnitCore">
			<arg value="${testRunner}"/>
		</java>
	</target>

</project>